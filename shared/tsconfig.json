{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "module": "CommonJS",
        "target": "ES2021",
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}

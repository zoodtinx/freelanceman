{
   "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
         "@types": ["../shared/dist/types"],
         "@mocks": ["./src/lib/api/mock/mock-data/index.ts"],
         "@/*": ["./src/*"]
      },
      "moduleResolution": "bundler",
      "isolatedModules": true,
      "moduleDetection": "force",
      "jsx": "react-jsx",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "composite": true,
      "declaration": true,
      "declarationDir": "./dist/types"
   },
   "include": ["src"]
}
